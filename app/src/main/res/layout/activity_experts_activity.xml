<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_experts_activity"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">


    <com.test720.auxiliary.View.MyScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/huian"></View>

            <RelativeLayout
                android:id="@+id/lv_line1"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="专业"
                    android:textColor="@color/grey"
                    android:textSize="16sp" />


                <ImageView
                    android:id="@+id/lv_toyou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/lt_title1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/lv_toyou"
                    android:gravity="center_vertical"
                    android:text="点击选择"
                    android:textColor="@color/grey"
                    android:textSize="16sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/fenge"></View>




            <RelativeLayout
                android:id="@+id/lv_line2"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="学历"
                    android:textColor="@color/grey"
                    android:textSize="16sp" />


                <ImageView
                    android:id="@+id/lv_toyou1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/lt_title2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/lv_toyou1"
                    android:gravity="center_vertical"
                    android:text="点击选择"
                    android:textColor="@color/grey"
                    android:textSize="16sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/fenge"></View>



            <RelativeLayout
                android:id="@+id/lv_line3"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="职称"
                    android:textColor="@color/grey"
                    android:textSize="16sp" />


                <ImageView
                    android:id="@+id/lv_toyou2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/lt_title3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/lv_toyou2"
                    android:gravity="center_vertical"
                    android:text="点击选择"
                    android:textColor="@color/grey"
                    android:textSize="16sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/fenge"></View>



            <RelativeLayout
                android:id="@+id/lv_line4"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="工作年限"
                    android:textColor="@color/grey"
                    android:textSize="16sp" />


                <ImageView
                    android:id="@+id/lv_toyou3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/lt_title4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/lv_toyou3"
                    android:gravity="center_vertical"
                    android:text="点击选择"
                    android:textColor="@color/grey"
                    android:textSize="16sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10.5dp"
                android:background="@color/huian"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:text="项目获奖证书"
                    android:textColor="@color/gwe"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/prject"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:background="@null"
                    android:hint="选填"
                    android:textColor="@color/grey"
                    android:textColorHint="@color/qianhui"
                    android:textSize="16sp" />
            </LinearLayout>

<View
    android:layout_width="match_parent"
    android:layout_height="10dp"
    android:background="@color/huian"></View>




            <LinearLayout
                android:id="@+id/workExperienceLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="工作经历"
                        android:textColor="@color/gwe"
                        android:textSize="14sp"
                        />


                    <TextView
                        android:id="@+id/addExperienceTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="添加"
                        android:textColor="@color/wenhong"
                        android:textSize="14sp"
                        />


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/background"></View>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:text="暂未添加工作经历"
                        android:textColor="@color/gray_normal"
                        android:textSize="13sp" />

                    <com.test720.petroleumbridge.View.MyListView
                        android:padding="10dp"
                        android:background="@color/white"
                        android:id="@+id/workExperienceListView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></com.test720.petroleumbridge.View.MyListView>


                </RelativeLayout>

            </LinearLayout>




            <View
                android:layout_width="match_parent"
                android:layout_height="10.5dp"
                android:background="@color/huian"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:text="擅长领域"
                    android:textColor="@color/gwe"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/skill"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:background="@null"
                    android:hint="按自己的擅长专业填写"
                    android:textColor="@color/grey"
                    android:textColorHint="@color/qianhui"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/huian"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:text="附件材料"
                        android:textColor="@color/grey"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:gravity="center"
                        android:text="(上传证书照片、非必填)"
                        android:textColor="@color/qianhui"
                        android:textSize="13dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/fenge"></View>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content">
                    <GridView
                        android:id="@+id/lv_gridview"
                        android:layout_width="match_parent"
                        android:layout_centerInParent="true"

                        android:numColumns="4"
                        android:scrollbars="none"
                        android:layout_height="wrap_content"></GridView>
                </RelativeLayout>

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="@color/huian">

                <Button
                    android:id="@+id/btn_go"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/shape_btn_red"
                    android:gravity="center"
                    android:text="申请"
                    android:textColor="@color/white"
                    android:textSize="17sp" />


            </RelativeLayout>


        </LinearLayout>
    </com.test720.auxiliary.View.MyScrollView>






</RelativeLayout>
